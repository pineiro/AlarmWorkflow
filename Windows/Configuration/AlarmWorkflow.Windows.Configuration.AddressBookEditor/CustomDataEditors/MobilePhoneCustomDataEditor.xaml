<UserControl x:Class="AlarmWorkflow.Windows.Configuration.AddressBookEditor.CustomDataEditors.MobilePhoneCustomDataEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:val="clr-namespace:AlarmWorkflow.Windows.Configuration.AddressBookEditor.Validation">
    <TextBox>
        <TextBox.Text>
            <Binding Path="PhoneNumber">
                <Binding.ValidationRules>
                    <val:MobilePhoneValidationRule />
                </Binding.ValidationRules>
            </Binding>
        </TextBox.Text>
    </TextBox>
</UserControl>
